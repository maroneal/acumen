// Absolute Value Function Example

model Main(simulator) =
initially
  t = 0, t' = 1,
  a = 1, b  = 1
always
  t' = 1,
  a = abs(t-1),
  if t <= 1 then
    b = 1 - t
  else
    b = t - 1,
  hypothesis "abs encodes a conditional" a == b,
  simulator.endTime+ = 2

// Note:  Currently does not terminate over [1..1.015625]
